<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_main_suggestion"
    android:layout_margin="@dimen/cardview_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#3000"
    >

    <LinearLayout
        android:paddingLeft="32dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/icon_cloth"
                android:tint="@color/cardview_light_background"
                android:id="@+id/item3_cloth_image"/>

            <LinearLayout
                android:layout_marginLeft="64dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cloth_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="穿衣指数---"
                    android:textColor="#fff"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/cloth_txt"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/icon_sport"
                android:tint="@color/cardview_light_background"
                android:id="@+id/item3_sport_image"/>

            <LinearLayout
                android:layout_marginLeft="64dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sport_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动指数---"
                    android:textColor="#fff"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/sport_txt"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/icon_travel"
                android:tint="@color/cardview_light_background"
                android:id="@+id/item3_travel_image"/>

            <LinearLayout
                android:layout_marginLeft="64dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travel_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游指数---"
                    android:textColor="#fff"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/travel_txt"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/icon_flu"
                android:tint="@color/cardview_light_background"
                android:id="@+id/item3_flu_image"/>

            <LinearLayout
                android:layout_marginLeft="64dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/flu_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="感冒指数---"
                    android:textColor="#fff"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/flu_txt"
                    android:layout_marginTop="2dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

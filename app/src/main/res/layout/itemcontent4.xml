<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="32dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_forecast"
        android:layout_gravity="center_vertical"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/type_one_sunny"
        />

    <RelativeLayout
        android:layout_marginLeft="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_forecast_date"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日"/>

        <TextView
            android:textSize="18sp"
            android:id="@+id/forecast_temp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="5° ~ 13°"/>

        <TextView
            android:id="@+id/tv_forecast_desc"
            android:textColor="#969696"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:layout_below="@+id/tv_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="少云。最高12℃。东北风 10 到 15 km/h"/>

    </RelativeLayout>
</LinearLayout>
